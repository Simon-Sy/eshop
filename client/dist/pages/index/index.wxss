
page, body {
  height: 100%;
}

.index {
  background-color: #ffffff;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  overflow: hidden;
}

.index-search_into {
  padding: 30rpx 40rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 120rpx;
  background: #ffffff;
}

.index-search_into .search_into {
  width: 670rpx;
  margin: 0 auto;
}

.index_list.hidden {
  height: 100%;
  overflow: hidden;
}

.index_list {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
      -ms-flex-positive: 1;
          flex-grow: 1;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
}

.index_item {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  width: 100%;
  margin: -1rpx 0 0;
  overflow: hidden;
}

.index_item_in {
  width: 100%;
  height: 100%;
}

.index_item_img {
  width: 100%;
}

.index_item_brand {
  position: absolute;
  top: 300rpx;
  left: 0;
  width: 100%;
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  color: #fff;
  letter-spacing: 4rpx;
}

.index_item_desc {
  position: absolute;
  top: 358rpx;
  left: 0;
  width: 100%;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  letter-spacing: 8rpx;
  color: #fff;
}

.index_item_type {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  text-align: right;
  color: #fff;
  font-size: 18rpx;
}

.index_item_title {
  position: absolute;
  top: 300rpx;
  left: 0;
  width: 100%;
  font-size: 42rpx;
  font-weight: bold;
  text-align: center;
  color: #fff;
  letter-spacing: 4rpx;
}

.index_item_more {
  position: absolute;
  top: 406rpx;
  left: 50%;
  width: 228rpx;
  height: 42rpx;
  margin-left: -114rpx;
  border: 1rpx solid #fff;
  text-align: center;
  line-height: 42rpx;
  font-size: 24rpx;
  color: #fff;
}

.index_item_avatar {
  position: absolute;
  bottom: 128rpx;
  left: 50%;
  margin-left: -25rpx;
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 100rpx;
}

.index_item_athor {
  position: absolute;
  bottom: 74rpx;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
}

.animation .index_item {
  -webkit-animation: home_move 0.5s ease-in forwards;
          animation: home_move 0.5s ease-in forwards;
}

@-webkit-keyframes home_move {
  0% {
    -webkit-transform: translateY(50rpx);
            transform: translateY(50rpx);
  }
  100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
  }
}

@keyframes home_move {
  0% {
    -webkit-transform: translateY(50rpx);
            transform: translateY(50rpx);
  }
  100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
  }
}